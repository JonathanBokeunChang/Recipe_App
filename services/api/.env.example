OPENAI_API_KEY=your-openai-api-key

# ASR options: auto | whisper | openai
# Leave as auto/openai unless you have the whisper CLI installed; whisper forces the CLI path.
ASR_PROVIDER=auto
WHISPER_MODEL=base
OPENAI_ASR_MODEL=whisper-1

# Frame sampling for vision/OCR
FRAME_SAMPLE_FPS=2        # frames per second to extract (2 = every 0.5s)
MAX_FRAME_SAMPLES=24      # cap on frames extracted to avoid huge jobs
MAX_FRAME_IMAGES=8        # max frames sent to the LLM
